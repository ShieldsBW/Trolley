{
  "name": "trolley-asset-pipeline",
  "version": "1.0.0",
  "description": "Automated asset generation and review pipeline for Trolley Problem game",
  "type": "module",
  "scripts": {
    "generate": "node asset-pipeline.js generate",
    "generate:backgrounds": "node asset-pipeline.js generate --category=backgrounds",
    "generate:buttons": "node asset-pipeline.js generate --category=buttons",
    "generate:icons": "node asset-pipeline.js generate --category=icons",
    "screenshot": "node asset-pipeline.js screenshot",
    "review": "node asset-pipeline.js review",
    "review:all": "node asset-pipeline.js review --all",
    "pipeline": "node asset-pipeline.js pipeline",
    "status": "node asset-pipeline.js status"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "dotenv": "^16.3.1",
    "fs-extra": "^11.2.0",
    "openai": "^4.20.0",
    "ora": "^7.0.1",
    "puppeteer": "^21.6.0",
    "sharp": "^0.33.5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
